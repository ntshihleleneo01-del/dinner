<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane
        style="-fx-background-image: url('@images/rice_beef.png');
               -fx-background-size: cover;
               -fx-background-position: center;
               -fx-background-repeat: no-repeat;
               -fx-font-family: 'Segoe UI';"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.restaurentsystem.RestaurantController">

    <GridPane fx:id="rootGrid"
              alignment="CENTER"
              hgap="12" vgap="12"
              style="-fx-padding:12;
                     -fx-background-color: rgba(255,255,255,0.85);
                     -fx-background-radius:15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 15,0.2,0,5);">

        <!-- Columns -->
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>

        <!-- Rows -->
        <rowConstraints>
            <RowConstraints percentHeight="35"/>
            <RowConstraints percentHeight="35"/>
            <RowConstraints percentHeight="30"/>
        </rowConstraints>

        <!-- ================= DINNER ================= -->
        <TitledPane text="DINNER (Main Meal)" GridPane.columnIndex="0" GridPane.rowIndex="0"
                    style="-fx-font-size:14px; -fx-font-weight:bold;">

            <VBox spacing="6" style="-fx-padding:6;">
                <HBox spacing="6">
                    <CheckBox fx:id="chkFood1"/>
                    <Spinner fx:id="qtyFood1" prefWidth="60"/>
                </HBox>
                <HBox spacing="6">
                    <CheckBox fx:id="chkFood2"/>
                    <Spinner fx:id="qtyFood2" prefWidth="60"/>
                </HBox>
                <HBox spacing="6">
                    <CheckBox fx:id="chkFood3"/>
                    <Spinner fx:id="qtyFood3" prefWidth="60"/>
                </HBox>
            </VBox>
        </TitledPane>

        <!-- ================= DESSERT ================= -->
        <TitledPane text="DESSERT" GridPane.columnIndex="1" GridPane.rowIndex="0"
                    style="-fx-font-size:14px; -fx-font-weight:bold;">

            <VBox spacing="6" style="-fx-padding:6;">
                <RadioButton fx:id="rbDessert1"/>
                <RadioButton fx:id="rbDessert2"/>
                <RadioButton fx:id="rbDessert3"/>

                <ImageView fitHeight="60" fitWidth="120">
                    <image>
                        <Image url="@images/cupcake.png"/>
                    </image>
                </ImageView>
            </VBox>
        </TitledPane>

        <!-- ================= DRINKS ================= -->
        <TitledPane text="DRINKS" GridPane.columnIndex="0" GridPane.rowIndex="1"
                    style="-fx-font-size:14px; -fx-font-weight:bold;">

            <VBox spacing="6" style="-fx-padding:6;">
                <ImageView fitHeight="60" fitWidth="120">
                    <image>
                        <Image url="@images/rice_beef.png"/>
                    </image>
                </ImageView>

                <ComboBox fx:id="comboDrinks" promptText="Drink" prefWidth="140"
                          style="-fx-background-radius:8; -fx-border-radius:8;"/>
            </VBox>
        </TitledPane>

        <!-- ================= PAYMENT ================= -->
        <VBox spacing="6" GridPane.columnIndex="1" GridPane.rowIndex="1"
              style="-fx-padding:6;">

            <TextField fx:id="txtTotal" promptText="Total" prefHeight="25"/>
            <TextField fx:id="txtPaid" promptText="Cash" prefHeight="25"/>
            <TextField fx:id="txtChange" promptText="Change" prefHeight="25"/>
        </VBox>

        <!-- ================= BUTTONS ================= -->
        <HBox alignment="CENTER" spacing="8"
              GridPane.columnSpan="2" GridPane.rowIndex="2">

            <Button text="Total" onAction="#calculateTotal"
                    style="-fx-background-color:#ff7043;
                       -fx-text-fill:white;
                       -fx-font-size:12px;
                       -fx-background-radius:12;
                       -fx-padding:5 12;"/>

            <Button text="Change" onAction="#calculateChange"
                    style="-fx-background-color:#26a69a;
                       -fx-text-fill:white;
                       -fx-font-size:12px;
                       -fx-background-radius:12;
                       -fx-padding:5 12;"/>

            <Button text="Reset" onAction="#resetSystem"
                    style="-fx-background-color:#ec407a;
                       -fx-text-fill:white;
                       -fx-font-size:12px;
                       -fx-background-radius:12;
                       -fx-padding:5 12;"/>

            <Button text="Exit" onAction="#exitSystem"
                    style="-fx-background-color:#ef5350;
                       -fx-text-fill:white;
                       -fx-font-size:12px;
                       -fx-background-radius:12;
                       -fx-padding:5 12;"/>

            <Button text="Sales" onAction="#openFileManager"
                    style="-fx-background-color:#42a5f5;
                       -fx-text-fill:white;
                       -fx-font-size:12px;
                       -fx-background-radius:12;
                       -fx-padding:5 12;"/>
        </HBox>

    </GridPane>

</StackPane>