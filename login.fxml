<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="20" style="-fx-padding: 50; -fx-background-color: aquer; -fx-background-image: url('/images/rice_beef.png'); -fx-background-size: cover; -fx-background-position: center; -fx-background-repeat: no-repeat;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurentsystem.LoginController">

    <!-- Title -->
    <Label style="               -fx-font-size: 28px;               -fx-font-weight: bold;               -fx-text-fill: white;               -fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);            " text="LOGIN" />

    <!-- Login Card -->
    <VBox spacing="15" style="              -fx-padding: 30;              -fx-background-color: rgba(255,255,255,0.88);              -fx-background-radius: 18;              -fx-min-width: 320;           ">

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Username" />

        <TextField fx:id="txtUsername" promptText="Enter username" style="-fx-font-size: 14px;" />

        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Password" />

        <PasswordField fx:id="txtPassword" promptText="Enter password" style="-fx-font-size: 14px;" />

        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">

            <Button onAction="#handleLogin" style="                         -fx-background-color: #fb8c00;                         -fx-text-fill: white;                         -fx-font-weight: bold;                         -fx-background-radius: 20;                         -fx-padding: 8 25 8 25;                     " text="Login" />

            <Button onAction="#goToSignup" style="                         -fx-background-color: #6a1b9a;                         -fx-text-fill: white;                         -fx-font-weight: bold;                         -fx-background-radius: 20;                         -fx-padding: 8 25 8 25;                     " text="Signup" />
        </HBox>
    </VBox>

    <!-- Message -->
    <Label fx:id="lblMessage" style="-fx-text-fill: red; -fx-font-weight: bold;" text="" />

</VBox>
